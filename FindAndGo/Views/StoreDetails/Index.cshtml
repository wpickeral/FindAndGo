@model StoreModel

@{
    ViewData["Title"] = "Store Details";
}

<div class="text-center my-6">
    <div class="my-auto">
        <h1 class="text-gray-900 text-xl mt-2 aria-hidden">
            Search for a product at <br/>
            <span>
                <p>@Model.Name</p>
                <p>@Model.Address</p>
            </span>
        </h1>
    </div>
    <form class="w-96 mx-auto mt-6" asp-controller="StoreDetails" asp-action="Search" method="post">
        <input type="hidden" id="locationId" name="locationId" value="@Model.LocationId"/>
        <label for="searchTerm" class="ml-px block pl-4 text-sm font-medium leading-6 text-gray-700 sr-only"></label>
        <input id="searchTerm" name="searchTerm" required class="mt-2 text-lg block w-full rounded-full border-0 px-4 text-xl py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter a product">
        <button type="submit" class="mt-5 rounded-full bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 w-full">Find</button>
    </form>
</div>