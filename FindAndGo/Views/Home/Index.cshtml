@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-6">
    <div class="my-auto">
        <h1 class="text-gray-800 font-light text-xl mt-2">Find & Go helps you find a product at any Kroger in just a few easy steps.</h1>
        <h2 class="text-gray-800 font-light text-xl mt-2">Find a location by zip code to get started.</h2>
        <form class="w-96 mx-auto mt-6">
            <label for="name" class="ml-px block pl-4 text-sm font-medium leading-6 text-gray-700 sr-only">Enter your zip code</label>
            <div class="mt-2">
                <input type="number" name="name" id="name" class="text-lg block w-full rounded-full border-0 px-4 text-xl py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter your zip code">
            </div>
            <button type="button" class="mt-5 rounded-full bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 w-full">Find</button>
        </form>
    </div>
</div>